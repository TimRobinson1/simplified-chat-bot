<% content_for :body_class, "login-page" %>

<div id='clearance'>

  <div class="sign-up-form">
    <%= form_for @user do |form| %>

      <div class='text-field info'>
        <%= form.text_field :name, :type => 'name', placeholder: 'Name...' %>
      </div>

      <div class='text-field info'>
        <%= form.text_field :email, :type => 'email', placeholder: 'Email...' %>
      </div>

      <div class='password-field info'>
        <%= form.password_field :password, placeholder: "Password..." %>
      </div>

      <div class='submit-field'>
        <%= form.submit %>
      </div>

    <% end %>
  </div>

</div>
